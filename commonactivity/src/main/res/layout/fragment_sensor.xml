<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <Button android:id="@+id/btn_sensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_sensor"/>
    <Button android:id="@+id/btn_sensor_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_sensor_light"/>
    <Button android:id="@+id/btn_sensor_orientation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_sensor_orientation"/>
    <TextView android:layout_width="wrap_content"
              android:textSize="20sp"
              android:text="@string/btn_sensor_light"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tv_sensor_light"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scrollbars="vertical"/>
    <TextView android:layout_width="wrap_content"
              android:textSize="20sp"
              android:text="@string/btn_sensor_orientation"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tv_sensor_orientation"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scrollbars="vertical"/>
    <TextView android:layout_width="wrap_content"
              android:textSize="20sp"
              android:text="@string/btn_sensor"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tv_sensor"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scrollbars="vertical"/>
</LinearLayout>