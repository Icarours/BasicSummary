<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.syl.viewdemo.activity.ImgActivity">
    <LinearLayout
        android:id="@+id/activity_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <Button android:id="@+id/btn_btn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:text="变换头像"/>
            <Button android:id="@+id/btn_btn2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:text="生成小图"/>
            <Button android:id="@+id/btn_btn3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:text="小图变小"/>
            <Button android:id="@+id/btn_btn4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:text="移动小图"/>
            <Button android:id="@+id/btn_btn5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:text="有圆边"/>
            <Button android:id="@+id/btn_btn6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:text="有进度条"/>
        </LinearLayout>
        <com.exampleenen.ruedy.imagelib.widget.IdentityImageView
            android:id="@+id/iiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iciv_progress_collor="@color/colorPrimary"/>
        <com.exampleenen.ruedy.imagelib.widget.CircleImageView
            android:id="@+id/civ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>